<Window x:Class="WpfApp1.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Book" Height="300" Width="400">
    <Grid>
        <TextBox Name="TitleTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox Name="AuthorTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" />
        <TextBox Name="GenreTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" />
        <TextBox Name="PublishYearTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" />
        <TextBox Name ="IBSNTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0"/>
        <TextBox Name ="QuantityTextBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" />
        <TextBlock Name = "Title" Width="169" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="221,17,0,0" Text="Tittle of the Book" TextAlignment="Center"/>
        <TextBlock Name = "AuthortextBlock" Width="169" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="221,57,0,0" Text="Name Of the author" TextAlignment="Center"/>
        <TextBlock Name = "Genre" Width="169" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="221,97,0,0" Text="Genre Of the book" TextAlignment="Center"/>
        <TextBlock Name = "PublisherTextBlock" Width="169" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="221,137,0,0" Text="Year Of the publication" TextAlignment="Center"/>
        <TextBlock Name = "IBSNTextBlock" Width="169" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="221,177,0,0" Text="IBSN" TextAlignment="Center"/>
        <TextBlock Name = "QuantityTextBlock" Width="169" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="221,217,0,0" Text="Quantity In the storage" TextAlignment="Center"/>
        <Button Content="Save" Width="150" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,254,0,0" Click="SaveBook_Click" />
    </Grid>
</Window>
